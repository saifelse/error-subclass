{
  "name": "error-subclass",
  "version": "1.0.0",
  "description": "Extendable Error Class",
  "main": "umd.js",
  "dependencies": {},
  "devDependencies": {
    "babel": "^5.6.5",
    "babelify": "^6.1.2",
    "codeclimate-test-reporter": "0.0.4",
    "istanbul": "^0.3.16",
    "jshint": "^2.8.0",
    "mocha": "^2.2.5",
    "semistandard": "^6.1.1"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "scripts": {
    "test": "istanbul cover node_modules/.bin/_mocha -- -u exports --compilers js:babel/register",
    "build-umd": "browserify src/ErrorSubclass.js > umd.js --standalone ErrorSubclass",
    "build-es6": "cp src/ErrorSubclass.js es6.js",
    "build": "npm run build-umd && npm run build-es6",
    "lint": "jshint src && semistandard",
    "prepublish": "npm run build"
  },
  "jshintConfig": {
    "esnext": true
  },
  "author": "Stephen Sorensen <shuoink@gmail.com> (http://www.stephenjohnsorensen.com/)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/spudly/error-subclass.git"
  }
}
